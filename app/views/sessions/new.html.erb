<div class="login_container">
  <%= form_tag login_path, { :id => "session_form" } do %>
    <div class='title'>Sign in</div>
      <%= render 'layouts/messages' %>
      <%= render 'layouts/errormessage'%>

    <div class='content'>
      <div class="formRow">
        <div class="input-prepend">
          <span class="add-on" title='Email'>@</span>
          <%= text_field_tag :email, params[:email],
              {:maxlength => 100, :placeholder=> 'Your email', :autocomplete => 'off'} %>
        </div>
      </div>

      <div class="formRow">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-lock"  title='Password'></i></span>
          <%= password_field_tag :password, nil, {:maxlength => 50, :placeholder => 'Password', :autocomplete => 'off'} %>
        </div>
      </div>
    </div>

    <div class="signin-bar clearfix">
      <% if flash[:alert] == 'You are Blocked!.Email sent to your email Address' %>
      <button class="btn btn-inverse " type="submit" disabled="disabled">Sign In</button>
      <% else %>
      <button class="btn btn-inverse " id="login_btn" type="submit">Sign In</button>
      <% end %>
      <span class='pull-right'><%= link_to 'Reset My Password', new_password_reset_path %></span>
    </div>
  <% end %>
</div>

<% javascript 'sessions.js' %>
